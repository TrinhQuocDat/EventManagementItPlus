<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="2dp"
android:layout_marginLeft="6dp"
android:layout_marginRight="6dp"
card_view:cardCornerRadius="4dp"
card_view:cardElevation="2dp"
    android:id="@+id/mainCardView">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgIconEvent"
            android:background="@drawable/icon_main"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="iconEvent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imgIconEvent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/txtNameEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#2c3e50"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="NameEvent sdfsfsdfsdfsd" />

            <TextView
                android:id="@+id/txtTimeEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#34495e"
                android:textSize="14dp"
                android:text="Time Events" />

            <TextView
                android:id="@+id/txtAddressEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7f8c8d"
                android:textSize="14dp"
                android:text="Address Event" />

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>